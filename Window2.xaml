<Window x:Class="pract2_prm_variant10.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pract2_prm_variant10"
        mc:Ignorable="d"
        Title="Window2" Height="350" Width="525">
    <Grid>
        <TextBlock 
                   HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" Height="70" Width="456"><Run Text="Дана строка-предложение на русском языке. Вывести самое длинное слово в"/><LineBreak/><Run Text="предложении (если таких слов несколько, то вывести первое из них)."/></TextBlock>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
            <TextBox x:Name="InputTextBox" Margin="0,0,0,10" Width="300"/>

            <Button Content="Вычислить" Click="CalculateButton_Click"/>

            <TextBox x:Name="OutputTextBox" Margin="0,10,0,0" Width="300" IsReadOnly="True"/>
        </StackPanel>
    </Grid>
</Window>
